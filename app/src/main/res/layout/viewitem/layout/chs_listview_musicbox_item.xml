<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Music_Musicitem_ly_height"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/id_iv_head"
			android:layout_width="@dimen/space_30"
			android:layout_height="@dimen/space_30"
            android:layout_gravity="center_vertical"
            android:gravity="center"
			android:layout_marginLeft="@dimen/space_5"
            android:background="@drawable/chs_music_list_player_default"
            />
		<Button
			android:id="@+id/id_img"
			android:layout_width="@dimen/space_30"
			android:layout_height="@dimen/space_30"
            android:layout_marginLeft="5dp"
			android:layout_gravity="center_vertical"
			android:gravity="center"
			android:background="@drawable/chs_music_list_player_normal" />
        <LinearLayout
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="8dp"
			android:layout_gravity="center"
			android:gravity="center"
	 		android:orientation="vertical">
			<TextView
				android:layout_weight="1"
				android:id="@+id/id_filename"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:text="FileName"
				android:textColor="@color/white"
				android:textSize="15sp"
				android:textAllCaps="false"
				/>
			<TextView
				android:layout_weight="0.5"
				android:id="@+id/id_art"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:textColor="@color/white"
				android:text="@string/unknown"
				android:textSize="12sp"
				android:textAllCaps="false"
				/>
		</LinearLayout>
		<Button
			android:id="@+id/id_msg"
			android:layout_width="40dp"
			android:layout_height="40dp"
            android:visibility="gone"
			android:layout_gravity="center_vertical"
            android:background="@drawable/chs_music_list_msg_normal"
			android:gravity="center"
			/>

	</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:background="#181818"
        />

</LinearLayout>