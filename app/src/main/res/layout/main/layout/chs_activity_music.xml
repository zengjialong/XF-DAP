<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mhsb_seekbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Topbar -->
        <RelativeLayout
            android:id="@+id/id_ly_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_Top_Bar"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/id_llyout_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/chs_back"
                    android:clickable="false"
                    android:gravity="center"
                    android:textColor="@color/text_color_back"

                    />
                <Button
                    android:id="@+id/id_b_back"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"
                    android:background="@null"
                    android:textColor="@color/text_color_back"
                    android:text="@string/BackTOMain"
                    android:clickable="false"
                    android:maxLines="1"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <!-- Page Name -->
            <TextView
                android:id="@+id/di_tv_viewpage_name"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="22222"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <!-- U盘 App模式-->
            <Button
                android:id="@+id/id_uhost"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:background="@drawable/chs_music_uhostpush_normal"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <!-- 文件头 -->
                    <LinearLayout
                        android:id="@+id/id_ly_filetitle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/id_ly_uhost"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/id_t_uhost"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@null"
                                android:textColor="@color/musicbox_fileindex_color"
                                android:text="@string/uhost"
                                android:clickable="false"
                                android:maxLines="1"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                />
                            <Button
                                android:layout_width="16dp"
                                android:layout_height="24dp"
                                android:clickable="false"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/file_index"
                                android:textColor="@color/text_color_back"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/id_ly_file"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:visibility="invisible"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/id_t_file"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@null"
                                android:textColor="@color/musicbox_fileindex_color"
                                android:text="@string/uhost"
                                android:clickable="false"
                                android:maxLines="1"
                                android:textAllCaps="false"
                                android:textSize="15sp"
                                />
                            <Button
                                android:layout_width="16dp"
                                android:layout_height="24dp"
                                android:clickable="false"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/file_index"
                                android:textColor="@color/text_color_back"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/id_ly_msg"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/id_t_opt"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:gravity="right|center_vertical"
                                android:background="@null"
                                android:textColor="@color/musicbox_OptMsg_color"
                                android:text="@string/ScanFile"
                                android:clickable="false"
                                android:maxLines="1"
                                android:textAllCaps="false"
                                android:textSize="13sp"
                                />
                            <TextView
                                android:id="@+id/id_t_optmsg"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:gravity="right|center_vertical"
                                android:background="@null"
                                android:textColor="@color/musicbox_OptMsg_color"
                                android:text="0/0"
                                android:clickable="false"
                                android:maxLines="1"
                                android:textAllCaps="false"
                                android:textSize="13sp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 列表头 -->
                    <RelativeLayout
                        android:id="@+id/id_ly_playmode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_Top_Bar"
                        android:layout_marginTop="0dp"
                        android:background="@null"
                        android:orientation="horizontal"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentTop="true"
                            android:background="@color/musicbox_listLine_color"
                            />
                        <LinearLayout
                            android:id="@+id/id_ly_playtext"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:paddingLeft="10dp"
                                android:clickable="false"
                                android:background="@drawable/chs_music_play_modepg"
                                android:textColor="@color/text_color_back"
                                />
                            <TextView
                                android:id="@+id/id_t_playtext"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:paddingLeft="0dp"
                                android:gravity="center_vertical|left"
                                android:background="@null"
                                android:textColor="@color/musicbox_listPageplayMode_color"
                                android:text="@string/notice_playmode_straight"
                                android:clickable="false"
                                android:maxLines="1"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                        <!-- 播放模式 -->
                        <Button
                            android:id="@+id/id_playmode"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/chs_music_bar_player_mode_ca_press"
                            />
                    </RelativeLayout>
                </LinearLayout>

                <!-- 列表 List -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/musicbox_listLine_color"
                    />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    >
                    <ListView
                        android:id="@+id/id_listvew_of_music"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:fillViewport="true"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:fadingEdge="none"
                        android:listSelector="@android:color/transparent"
                        android:dividerHeight="0dp"
                        android:divider="@null"
                        android:orientation="vertical"
                        />
                    <ListView
                        android:id="@+id/id_listvew_of_file"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:fadingEdge="none"
                        android:listSelector="@android:color/transparent"
                        android:dividerHeight="0dp"
                        android:divider="@null"
                        android:orientation="vertical"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/musicbox_listLine_color"
                    />
                <!-- 音乐控件 -->
                <com.chs.mt.xf_dap.MusicBox.V_MusicPlayItem
                    android:id="@+id/id_music"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/id_b_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/UHostOut"
                android:textColor="#FFFF8800"
                android:textSize="35sp"
                android:textAllCaps="false"
                android:visibility="gone"
                android:background="@drawable/chs_btn_encryption"/>


        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_ly_sb_main_val"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/chs_layoutc_mainval_bg"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <com.chs.mt.xf_dap.tools.MHS_SeekBar
            android:id="@+id/id_sb_main_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:thumb="@drawable/chs_seekbar_thumb"
            mhsb_seekbar:mhs_progress_max="66"
            mhsb_seekbar:mhs_progress_width="2dp"
            mhsb_seekbar:mhs_progress_background_color="@color/mcl_seekbar_pbg_color"
            mhsb_seekbar:mhs_progress_color="@color/mcl_seekbar_progress_color"
            />
    </LinearLayout>
</RelativeLayout>
