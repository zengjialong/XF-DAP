<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mhsb_seekbar="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_ly_musiclrc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/id_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:progressBarImageScaleType="centerInside"
        fresco:failureImageScaleType="centerInside"
        fresco:actualImageScaleType="centerCrop"
        android:background="@drawable/chs_music_bg"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- Topbar -->
        <RelativeLayout
            android:id="@+id/id_ly_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_Top_Bar"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/id_llyout_back"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/chs_back"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_color_back"

                    />
                <Button
                    android:id="@+id/id_b_back"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:paddingLeft="0dp"
                    android:gravity="center_vertical|left"
                    android:background="@null"
                    android:visibility="gone"
                    android:textColor="@color/text_color_back"
                    android:text="@string/BackTOMain"
                    android:clickable="false"
                    android:maxLines="1"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <!-- Page Name -->
            <TextView
                android:id="@+id/di_tv_viewpage_name"
                android:layout_width="@dimen/space_250"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_Top_Bar_PageName"
                android:textSize="15sp"/>

            <!-- ImageView Connect -->
            <Button
                android:id="@+id/id_b_menu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/chs_menu_b"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </RelativeLayout>
        <!-- 歌词 -->
        <!-- artist -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/musicbox_LrcPageFragLine_Color"
                />
            <TextView
                android:id="@+id/id_tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/unknown"
                android:textColor="@color/musicbox_LrcPagePlay_text_normal"
                />
            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/musicbox_LrcPageFragLine_Color"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:fadingEdge="none"
                android:flipInterval="30"
                android:persistentDrawingCache="animation"
                />


            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <Button
                    android:id="@+id/id_b_index0"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/chs_musiclrc_pindex_press"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />
                <Button
                    android:id="@+id/id_b_index1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/chs_musiclrc_pindex_normal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>


        </RelativeLayout>

        <!-- 控制 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            >
            <!-- 进度 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/id_tx_time"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="00.00"
                    android:textColor="@color/musicbox_LrcPagePlay_text_normal"
                    />

                <com.chs.mt.xf_dap.tools.MHS_SeekBarProgress
                    android:id="@+id/id_sb_play"
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:thumb="@drawable/chs_seekbar_thumb"
                    mhsb_seekbar:mhs_progress_max="66"
                    mhsb_seekbar:mhs_progress_width="2dp"
                    mhsb_seekbar:mhs_progress_background_color="@color/mcl_seekbar_pbg_color"
                    mhsb_seekbar:mhs_progress_color="@color/mcl_seekbar_progress_color"
                    />
                <TextView
                    android:id="@+id/id_tx_time_all"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="3.40"
                    android:textColor="@color/musicbox_LrcPagePlay_text_normal"
                    />
            </LinearLayout>

            <!-- 操作 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                >
                <!-- 暂停播放操作 -->
                <RelativeLayout
                    android:id="@+id/id_ly_music_play"
                    android:layout_width="@dimen/Music_lrc_Bar_play_Size"
                    android:layout_height="@dimen/Music_lrc_Bar_play_Size"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:background="@drawable/chs_music_lrc_play_color_0"
                    >
                    <Button
                        android:id="@+id/id_b_music_play"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textAllCaps="false"
                        android:background="@drawable/chs_music_lrc_stop"
                        android:scaleType="fitXY"
                        android:clickable="false"
                        android:text=""
                        android:textColor="@color/weight_b_Polar_P_text_color"
                        android:textSize="@dimen/output_p_textsize"/>
                </RelativeLayout>

                <!-- 下一首操作 -->
                <RelativeLayout
                    android:id="@+id/id_ly_music_next"
                    android:layout_width="@dimen/Music_lrc_Bar_pnext_Size"
                    android:layout_height="@dimen/Music_lrc_Bar_pnext_Size"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/id_ly_music_play"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/chs_music_lrc_pnext_color_0"
                    >
                    <Button
                        android:id="@+id/id_b_music_next"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textAllCaps="false"
                        android:background="@drawable/chs_music_lrc_next"
                        android:scaleType="fitXY"
                        android:text=""
                        android:clickable="false"
                        android:textColor="@color/weight_b_Polar_P_text_color"
                        android:textSize="@dimen/output_p_textsize"/>
                </RelativeLayout>

                <!-- 前一首操作 -->
                <RelativeLayout
                    android:id="@+id/id_ly_music_previous"
                    android:layout_width="@dimen/Music_lrc_Bar_pnext_Size"
                    android:layout_height="@dimen/Music_lrc_Bar_pnext_Size"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/id_ly_music_play"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/chs_music_lrc_pnext_color_0"
                    >
                    <Button
                        android:id="@+id/id_b_music_previous"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textAllCaps="false"
                        android:background="@drawable/chs_music_lrc_pre"
                        android:scaleType="fitXY"
                        android:text=""
                        android:clickable="false"
                        android:textColor="@color/weight_b_Polar_P_text_color"
                        android:textSize="@dimen/output_p_textsize"/>
                </RelativeLayout>


                <!-- 播放模式操作 -->
                <Button
                    android:id="@+id/id_b_music_play_mode"
                    android:layout_width="@dimen/Music_Control_BtnMSg_Size"
                    android:layout_height="@dimen/Music_Control_BtnMSg_Size"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:textAllCaps="false"
                    android:background="@drawable/chs_music_bar_player_mode_ca_press"
                    android:scaleType="fitXY"
                    android:text=""
                    android:textColor="@color/weight_b_Polar_P_text_color"
                    android:textSize="@dimen/output_p_textsize"/>
                <!-- 当前Music Msg操作 -->
                <Button
                    android:id="@+id/id_b_music_play_cur_msg"
                    android:layout_width="@dimen/Music_Control_BtnMSg_Size"
                    android:layout_height="@dimen/Music_Control_BtnMSg_Size"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:textAllCaps="false"
                    android:background="@drawable/chs_music_bar_normal"
                    android:scaleType="fitXY"
                    android:text=""
                    android:textColor="@color/weight_b_Polar_P_text_color"
                    android:textSize="@dimen/output_p_textsize"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ly_sb_main_val"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="@drawable/chs_layoutc_mainval_bg"
        android:orientation="vertical"
        >
        <com.chs.mt.xf_dap.tools.MHS_SeekBar
            android:id="@+id/id_sb_main_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:thumb="@drawable/chs_seekbar_thumb"
            mhsb_seekbar:mhs_progress_max="66"
            mhsb_seekbar:mhs_progress_width="2dp"
            mhsb_seekbar:mhs_progress_background_color="@color/mcl_seekbar_pbg_color"
            mhsb_seekbar:mhs_progress_color="@color/mcl_seekbar_progress_color"
            />
    </LinearLayout>
</RelativeLayout>
