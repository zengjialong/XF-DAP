                android:id="@+id/id_img_main"
                android:layout_width="@dimen/space_120"
                android:layout_height="@dimen/main_top_title_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/MainValume"
                android:textAllCaps="false"
                android:textSize="@dimen/space_18"
                />
            <ImageView
                android:id="@+id/id_img_title"
                android:layout_width="@dimen/space_120"
                android:layout_height="@dimen/space_40"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:src="@drawable/chs_tabbr_logo"

                android:visibility="gone"
                android:text="@string/MainValume"
                android:textAllCaps="false"
                android:textSize="@dimen/space_16"
                />

        </LinearLayout>






        <!-- ImageView Connect -->

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/id_b_Connect"
                android:layout_width="@dimen/B_connect_width_Top_Bar"
                android:layout_height="@dimen/B_connect_height_Top_Bar"
                android:background="@drawable/chs_btn_connect_normal_selector"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:textColor="@color/text_color_disconnected"
                android:maxLines="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_tv_Connect"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@null"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:clickable="false"
                android:text="@string/ST_BT_DISCONNECT"
                android:textColor="@color/text_color_disconnected"
