<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mhsb_seekbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/musicbox_LrcPageFragLine_Color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >
            <!-- artist -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/id_b_art"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chs_musiclrc_icon_artist"
                    />
                <TextView
                    android:id="@+id/id_tv_artistt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/music_info_artist"
                    android:textColor="@color/musicbox_LrcPagePlay_text_normal"
                    />
                <TextView
                    android:id="@+id/id_tv_artist"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|left"
                    android:text="@string/unknown"
                    android:textColor="@color/musicbox_LrcPagePlay_text_normal"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/musicbox_LrcPageFragLine_Color"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="40dp"
                />

            <!-- Album -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/id_b_album"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chs_musiclrc_icon_album"
                    />
                <TextView
                    android:id="@+id/id_tv_albumt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/music_info_ablum"
                    android:textColor="@color/musicbox_LrcPagePlay_text_normal"
                    />
                <TextView
                    android:id="@+id/id_tv_album"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|left"
                    android:text="@string/unknown"
                    android:textColor="@color/musicbox_LrcPagePlay_text_normal"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/musicbox_LrcPageFragLine_Color"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="40dp"
                />

            <!-- data -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/id_b_data"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chs_musiclrc_icon_data"
                    />
                <TextView
                    android:id="@+id/id_tv_datat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/music_info_data"
                    android:textColor="@color/musicbox_LrcPagePlay_text_normal"
                    />
                <TextView
                    android:id="@+id/id_tv_data"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|left"
                    android:text="@string/unknown"
                    android:textColor="@color/musicbox_LrcPagePlay_text_normal"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/musicbox_LrcPageFragLine_Color"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="40dp"
                />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
