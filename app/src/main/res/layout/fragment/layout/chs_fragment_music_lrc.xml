<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mhsb_seekbar="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="@dimen/Music_LRCPage_ImgSize"
            android:layout_height="@dimen/Music_LRCPage_ImgSize"
            android:layout_centerHorizontal="true"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_bg"
                android:layout_width="@dimen/Music_LRCPage_ImgSize"
                android:layout_height="@dimen/Music_LRCPage_ImgSize"
                fresco:progressBarImageScaleType="centerInside"
                fresco:failureImageScaleType="centerInside"
                fresco:actualImageScaleType="centerCrop"
                android:background="@drawable/chs_music_die_bg"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_centerInParent="true"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image"
                android:layout_width="@dimen/Music_LRCPage_ImgSize"
                android:layout_height="@dimen/Music_LRCPage_ImgSize"
                fresco:progressBarImageScaleType="centerInside"
                fresco:failureImageScaleType="centerInside"
                fresco:actualImageScaleType="centerCrop"
                android:background="@drawable/chs_music_die"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_centerInParent="true"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_play"
                android:layout_width="@dimen/Music_LRCPage_ImgSize"
                android:layout_height="@dimen/Music_LRCPage_ImgSize"
                fresco:progressBarImageScaleType="centerInside"
                fresco:failureImageScaleType="centerInside"
                fresco:actualImageScaleType="centerCrop"
                android:background="@drawable/chs_music_die_play"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_stop"
                android:layout_width="@dimen/Music_LRCPage_ImgSize"
                android:layout_height="@dimen/Music_LRCPage_ImgSize"
                fresco:progressBarImageScaleType="centerInside"
                fresco:failureImageScaleType="centerInside"
                fresco:actualImageScaleType="centerCrop"
                android:background="@drawable/chs_music_die_stop"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <!-- 歌词 -->
        <TextView
            android:id="@+id/id_tv_lrc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/music_lrc_getmsg"
            />

