<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:SField="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_layout_delaysettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_img_delay_src"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@drawable/chs_delay_simple_car"
        app:layout_heightPercent="100%"
        app:layout_marginBottomPercent="0%"
        app:layout_widthPercent="100%"

        />

    <LinearLayout
        android:id="@+id/id_ly_delaytype"
        android:layout_width="180dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/chs_btn_delay_normal"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/id_delaytype_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Toning_Speaker"
            android:textAllCaps="false"
            android:textColor="@color/delay_unit_text_color_press"
            android:textSize="13sp" />

        <Button
            android:id="@+id/id_delaytype_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Toning_Zone"
            android:textAllCaps="false"
            android:textColor="@color/delay_unit_text_color_normal"
            android:textSize="13sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/id_ly_spk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 单位  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/id_b_inch1"
                    android:layout_width="85dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@drawable/chs_btn_setdunit_normal"
                    android:gravity="center"
                    android:text="@string/Inch"
                    android:textAllCaps="false"
                    android:textColor="@color/delay_unit_text_color_normal"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/id_ly_delaytype_speak"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/nullc"
        app:layout_heightPercent="80%"
        app:layout_marginBottomPercent="15%"
        app:layout_widthPercent="90%">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:gravity="bottom|right"
                    >
                    <ImageView
                        android:layout_width="@dimen/space_40"
                        android:layout_height="@dimen/space_40"
                        android:src="@drawable/front_left"
                        />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:gravity="bottom|left"
                    >
                    <ImageView
                        android:layout_width="@dimen/space_40"
                        android:layout_height="@dimen/space_40"
                        android:src="@drawable/front_right"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_10"
                        android:background="@color/transparent"
                        android:gravity="top|right"
                        android:text="@string/FrontLeft"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_10"
                        android:background="@color/transparent"
                        android:gravity="top|right"
                        android:text="@string/RearLeft"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_12" />
                </RelativeLayout>

                <com.chs.mt.xf_dap.tools.DelaySettingFour
                    android:id="@+id/id_setdelay_four_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:thumb="@drawable/chs_circle_delay_normal"
                    SField:soundfield_arc_angle="15"
                    SField:soundfield_arc_color="#F50D47"
                    SField:soundfield_arc_line_interval="12dp"
                    SField:soundfield_arc_line_width="2dp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:gravity="top|left"
                        android:text="@string/FrontRight"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:gravity="top|left"
                        android:text="@string/RearRight"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_12" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:gravity="top|right"
                    >
                    <ImageView
                        android:layout_width="@dimen/space_40"
                        android:layout_height="@dimen/space_40"
                        android:src="@drawable/rear_left"
                        />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:gravity="top|left"
                    >
                    <ImageView
                        android:layout_width="@dimen/space_40"
                        android:layout_height="@dimen/space_40"
                        android:src="@drawable/rear_right"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:src="@drawable/chs_delay_car"
            app:layout_heightPercent="70%"
            app:layout_marginLeftPercent="18%"
            app:layout_marginRightPercent="10%"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="63%">

        </ImageView>

        <com.chs.mt.xf_dap.tools.DelaySettingFourT
            android:id="@+id/id_setdelay_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:thumb="@drawable/chs_circle_delay_normal"
            android:visibility="gone"

            SField:soundfield_arc_angle="20"
            SField:soundfield_arc_color="@color/inputpage_btn_color_press"
            SField:soundfield_arc_line_interval="12dp"
            SField:soundfield_arc_line_width="2dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_30"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_20"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_driver"
            android:layout_width="80dp"
            android:layout_height="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:background="@drawable/chs_btn_center_normal"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Driving_position"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/id_front"
            android:layout_width="80dp"
            android:layout_height="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:background="@drawable/chs_btn_center_normal"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/Front_part"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/id_all"
            android:layout_width="80dp"
            android:layout_height="@dimen/space_30"
            android:background="@drawable/chs_btn_center_normal"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/rear"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>


    <Button
        android:id="@+id/id_b_encryption"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chs_btn_encryption"
        android:text="@string/HadEncryption"
        android:textAllCaps="false"
        android:textColor="@color/text_color_red"
        android:textSize="35sp"
        android:visibility="gone" />
</android.support.percent.PercentRelativeLayout>