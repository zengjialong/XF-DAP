<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:id="@+id/id_ly_off"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/chs_layoutc_filter_bg"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/pop_text"
            android:orientation="vertical">


            <TextView
                android:id="@+id/id_text_msg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_30"
                android:layout_gravity="center"
                android:text="@string/boot_default_source"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textAllCaps="false"
                android:textSize="@dimen/space_15"
                android:gravity="center"/>

            <Button
                android:id="@+id/id_chs_dialog_exit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/chs_dialog_exit"
                android:textAllCaps="false"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/id_source1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/id_v_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="false"
                android:text="@string/Hi_Level"
                android:background="@drawable/button_style"
                android:textColor="@color/oct_select_num"
                android:textAllCaps="false"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_source3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/id_v_image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="false"
                android:text="@string/AUX"
                android:background="@drawable/button_style"
                android:textColor="@color/oct_select_num"
                android:textAllCaps="false"
                android:textSize="13sp"
                />
        </LinearLayout>





        <LinearLayout
            android:id="@+id/id_source2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">



            <Button
                android:id="@+id/id_v_image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="false"
                android:text="@string/Player"
                android:background="@color/nullc"
                android:textColor="@color/oct_select_num"
                android:textAllCaps="false"
                android:textSize="13sp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>