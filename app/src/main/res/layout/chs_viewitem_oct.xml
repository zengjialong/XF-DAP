<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:KNOB="http://schemas.android.com/apk/res-auto"
    xmlns:mhsb_seekbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" 
	android:gravity="center" 
    android:background="@drawable/chs_btn_oct_normal"
    android:orientation="horizontal" >

    <Button
        android:layout_weight="1"
        android:id="@+id/id_b_ch_0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="6dB"
        android:textColor="@color/xover_text_color_normal"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/chs_btn_oct_normal"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/id_b_ch_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="12dB"
        android:textColor="@color/xover_text_color_normal"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/chs_btn_oct_normal"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/id_b_ch_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="18dB"
        android:textColor="@color/xover_text_color_normal"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/chs_btn_oct_normal"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/id_b_ch_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="24dB"
        android:textColor="@color/xover_text_color_normal"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/chs_btn_oct_normal"/>


</LinearLayout>