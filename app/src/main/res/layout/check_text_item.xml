<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:mhsb_seekbar="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/space_51"
    android:background="@color/common_bg"
    android:orientation="vertical"
    android:id="@+id/id_ly_check"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_img_inputsource"
            android:layout_width="@dimen/space_25"
            android:layout_height="@dimen/space_25"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/chs_check"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_10"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="高音"
                    android:layout_weight="5"
                    android:textSize="@dimen/space_15"
                    android:layout_marginLeft="@dimen/space_20"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

                <ImageView
                    android:id="@+id/id_img_check"
                    android:layout_width="@dimen/space_25"
                    android:layout_height="@dimen/space_25"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/space_20"
                    android:src="@drawable/chs_yes" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
